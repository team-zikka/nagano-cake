<h2>ジャンル一覧・追加</h2>
<div>
<%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
    <div class="form-group">
      <label>ジャンル名</label>
      <%= f.text_field :name, class: "form-control genre-name", placeholder:"ジャンル名" %>　<%= f.submit '新規登録' %>
    </div>

<% end %>
</div>

<div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admins_genre_path(genre.id) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
