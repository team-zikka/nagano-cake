
<div class="row">
  <div class="container">
  　<div class="row">
  　 <div class="col-md-8 offset-md-2">
  　   <h2>注文履歴一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.created_at, admins_order_path(order.id) %></td>
                <td><%= link_to (order.customer.last_name)+(order.customer.first_name) %></td>
                <% @sum = 0 %>
                <% order.order_details.each do |order_detail| %>
                  <% @sum += order_detail.amount %>
                <% end %>
                <td><%= @sum %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
　　　</div>
　　</div>
  </div>
</div>