<h2><%= @customer.full_name %>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admins_customer_path, local:true do |f| %>
 <table>
　<div class="form-group row">
    <label class="col-sm-2 col-form-label">会員ID</label>
    <div class="col-sm-5">
      <input type="text" readonly class="form-control-plaintext" >
      <%= @customer.id %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">氏名</label>
    <div class="col">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">郵便番号</label>
    <div class="col-sm-10">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">電話番号</label>
    <div class="col-sm-10">
      <%= f.text_field :telephone_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">会員ステータス</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
          <label class="form-check-label" for="gridRadios1">
            有効
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
          <label class="form-check-label" for="gridRadios2">
            退会
          </label>
        </div>
      </div>
    </div>
  </fieldset>
  <div class="col-sm-10">
    <%= f.submit "変更を保存", class:"btn btn-success" %>
  </div>
 </table>
<% end %>