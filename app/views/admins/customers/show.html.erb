  <h2><%= @customer.full_name %>さんの会員詳細</h2>
    <table>
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
　      <th>氏名</th>
　      <th><%= @customer.last_name %> <%= @customer.first_name %></th>
　     </tr>
      <tr>
　      <th>フリガナ</th>
　      <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
　    </tr>
　    <tr>
　      <th>郵便番号</th>
　      <th><%= @customer.postal_code %></th>
　    </tr>
　    <tr>
　      <th>住所</th>
　      <th><%= @customer.address %></th>
　    </tr>
　    <tr>
　      <th>電話番号</th>
　      <th><%= @customer.telephone_number %></th>
　    </tr>
　    <tr>
　      <th>メールアドレス</th>
　      <th><%= @customer.email %></th>
　    </tr>
　    <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_daleted == false %>
            <p>有効</p>
          <% elsif @customer.is_daleted == true %>
            <p>退会</p>
          <% end %>
        </td>
      </tr>
　    <tr>
　      <th></th>
　      <th>
　        <%= link_to "編集する", edit_admins_customer_path(@customer.id), class:"btn btn-success" %>
　      </th>
　      <th>
　        <%= link_to "注文履歴一覧を見る", admins_root_path, class:"btn btn-primary" %>
　      </th>
　    </tr>
　 </table>