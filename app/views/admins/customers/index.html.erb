<div class="container px-5 px-sm-0">
  <div class="row">
      <h2>会員一覧</h2>
      <table class="table text-center">
        <thead class="bg-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admins_customer_path(customer.id) do %>
              <%= customer.full_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_daleted %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>