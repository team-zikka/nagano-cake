<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>注文履歴詳細</h2>
      <table>
       <tr>
        <th>購入者</th>
        <td><%= @order.customer.last_name %> <%= @order.customer.first_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.customer. %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with @order, url: admins_order_path do |f| %><!--oreder controllerのupdateに飛ぶ-->
          　<%= f.select :status,["入金待ち","入金確認","製作中","発送準備中","発送済"] ,style: "margin-top:10px;#" %><!--ステータス選択 -->
          <%= f.submit "更新" ,class: "btn btn-primary btn-sm" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  
  <div>
    <div class=" col-xs-9">
      <table class="table table-hover table-inverse">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
        <%  @order_details.each do |order_detail| %><!--注文した商品の履歴一覧　-->
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= ((order_detail.price)*(order_detail.amount)) %> </td>
        <!-- 製作ステータス変更-->
          <%= form_with order_detail, url: admins_order_detail_path(order_detail) do |f| %>
          <td><%= f.select :making_status,["着手不可","製作待ち","製作中","製作完了"] %></td>
          <td><%= f.submit "更新" ,class:"btn btn-primary btn-xs" %></td>
          <% end %>
        </tr>
          <% end %>
      </table>
    </div>

    <div>
     <h4>商品合計     <%= @order.total_payment %>円</h4>
     <h4>送料　　　    <%= @order.shipping_cost %>円</h4>
     <h4>請求金額合計　<%= (@order.total_payment+@order.shipping_cost) %>円</h4>
    </div>
  </div>

</div>