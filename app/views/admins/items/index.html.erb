<div class="cotainer">
  <div class="row" style="width:90%; margin:20px auto;">
   <div class="col-md-11">
    <br >
    <h5 style="background-color:#FFF8DC ">&emsp;商品一覧</h5>
   </div>
  </div>
  <div class="row" style="width:90%; margin:0 auto;">
   <div class="col-md-11">
    <div class="text-right">
     <%= link_to " 商品追加", new_admins_item_path, class: "btn btn-success " %><br >
     <br >
    </div>
    <table class="table table-hover">
     <thead class="thead-light">
      <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜き価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
      </tr>
     </thead>
     <% @items.each do |item| %>
     <tbody>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admins_item_path(item.id) %></td>
      <td>¥<%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active == true %>
          <p class = "text-success">販売中</p>
        <% elsif item.is_active == false %>
          <p class = "text-secondary">販売停止中</p>
        <% end %>
      </td>
     </tbody>
     <% end %>
    </table>
   </div>
  </div>
  <div class="row">
   <div class="text-center" style="margin:0 auto;">
    <%= paginate @items %>
   </div>
  </div>
 </div>
