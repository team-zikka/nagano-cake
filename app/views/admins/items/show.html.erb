<h2>商品編集</h2>
 <%= attachment_image_tag(@item, :image, size: "200x200" ) %>
 <table>
   <thead>
     <tr>
       <th>商品名</th>
       <td><%= f.text_field :name %></td>
     </tr>
     <tr>
        <th><%= f.label :"商品説明"%></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th><%= f.label :"ジャンル"%></th>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <th>
          <p>税抜価格</p>
          <p>(税込価格)</p>
        </th>
        <td>
          <p><%= (@item.price * 1.08).round %>円</p>
          <p><%= @item.price %>円</p>
        </td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <% if @item.is_active == true %>
            <p>販売中</p>
          <% elsif @item.is_active == false %>
            <p>販売停止中</p>
        </td>
      </tr>
   </thead>
 </table>
 <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>