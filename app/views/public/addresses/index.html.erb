<h2>配送先登録/一覧</h2>
 <%= form_with model: @address, url: addresses_path, local:true do |f| %>
 <table>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">郵便番号</label>
    <div class="col">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">宛名</label>
    <div class="col-sm-10">
      <%= f.text_field :name %>       <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  </div>
 </table>
 <% end %>
 <table class="table table-bordered">
    <thead class="bg-secondary">
         <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
         </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %>
          <%= link_to "削除する", address_path(address), class:"btn btn-danger", method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
 </table>