<h2>配送先</h2>
<%= form_with model: @address, url: address_path(@address), local:true do |f| %>
<table>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">郵便番号</label>
    <div class="col">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">宛名</label>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>
  <div>
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
  </div>
 </table>
 <% end %>