<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mt-4 bg-light w-25 text-center">配送先</h2>
      <% if @address.errors.any? %>
        <%= @address.errors.count %>Please writing<br>
        <% @address.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: @address, url: address_path(@address), local:true do |f| %>
      <table>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">郵便番号</label>
          <div class="col">
            <%= f.text_field :postal_code, class:"form-control w-25" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">住所</label>
          <div class="col-sm-10">
            <%= f.text_field :address, class:"form-control w-25" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">宛名</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class:"form-control w-25" %>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit "変更内容を保存", class:"btn btn-success" %>
        </div>
      </table>
      <% end %>
    </div>
  </div>
</div>