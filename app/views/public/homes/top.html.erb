
<div class="container">
  <div class="row">

    <div class="col-md-2">
      <%= render 'admins/genres/genre_list', genres: @genres  %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="text-center">
        <%= image_tag "nagano-cake-top.png", :size => "500x300"  %>
      </div>
        <h2>新着商品</h2>
    　<div class="row">
    　   <div class="col-md-8"  >
          <div class="d-flex">
            <% @items.each do |item| %>
              <table class="table table-hover table-inverse ">
                <tbody>
                    <tr>
                      <td>
                        <%= link_to item_path(item.id) do %>
                        <%= attachment_image_tag item, :image, size: "150x150" %>
                        <% end %>
                        <%= link_to item.name, item_path(item.id) %><br>
                        <% if item.is_active == true %>
                          ¥<%= item.price %>
                        <% elsif item.is_active == false %>
                          売り切れ中
                        <% end %>
                      </td>
                    </tr>
                </tbody>
              </table>
            <% end %>
          </div>
  　　　　</div>
      </div>
      <%= link_to items_path do %>
      <p class="text-right">すべての商品を見る</p>
      <% end %>
    </div>
  </div>
</div>