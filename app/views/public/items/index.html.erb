<div class="cotainer">
    <div class="row" style="width:80%; margin:20px auto;">
      <div class="col-md-11">
        <h4 style="background-color:#FFF8DC ">&emsp;商品一覧</h4>
      </div>
    </div>
  　<div class="row">
    　<div class="col-md-8 offset-md-1">
      　<div class="d-flex">
          <% @items.each do |item| %>
          <table class="table table-hover table-borderless table-inverse ">
            <tbody>
              <tr>
                <td>
      　            <div class="card-deck" style="width:18rem">
                    <div class="card">
                      <%= link_to item_path(item.id) do %>
                        <%= attachment_image_tag(item, :image, size: "255x240") %>
                      <% end %>
                        <%= link_to item.name, item_path(item.id) %>
                      <% if item.is_active == true %>
                        ¥<%= item.price %>
                      <% elsif item.is_active == false %>
                        売り切れ中
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
          <% end %>
        </div>
        <br>
      <%= paginate @items %>
    </div>
  </div>