<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_path, local:true do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">氏名</label>
    <div class="col">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">郵便番号</label>
    <div class="col-sm-10">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">電話番号</label>
    <div class="col-sm-10">
      <%= f.text_field :telephone_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <table>
    <thead>
      <tr>
        <th><%= f.submit "編集内容を保存", class:"btn btn-success" %></th>
        <th><%= link_to "退会する", confirm_customers_path(@customer), class:"btn btn-danger" %></th>
　    </tr>
　  </thead>
　</table>
<% end %>