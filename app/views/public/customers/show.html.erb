<h2>マイページ</h2>
<table class="col-md-4">
  <thead>
    <tr>
      <th><h3>登録情報</h3></th>
      <th><%= link_to "編集する", edit_customers_path(@customer), class:"btn btn-success" %></th>
    </tr>
  </thead>
</table>
<table class="table table-bordered">
  <tbody>
    <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %> <%= @customer.first_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
  </tbody>
</table>
<table class="col-sm-4">
  <thead>
    <tr>
      <th><h3>配送先</h3></th>
      <th><%= link_to "一覧を見る", addresses_path(@customer), class:"btn btn-primary" %></th>
    </tr>
  </thead>
</table>
<table class="col-sm-3">
  <thead>
    <tr>
      <th><h3>注文履歴</h3></th>
      <th><%= link_to "一覧を見る", orders_path(@customer), class:"btn btn-primary" %></th>
    </tr>
  </thead>
</table>