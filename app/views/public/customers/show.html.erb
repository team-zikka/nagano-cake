<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mt-4 bg-light w-25 text-center">マイページ</h2>
      <table>
        <thead>
          <tr>
            <th><h5 class="mr-5 mt-2">登録情報</h5></th>
            <th><%= link_to "編集する", edit_customers_path, class:"btn btn-success" %></th>
          </tr>
        </thead>
      </table>
      <table class="table table-bordered col-md-8 mt-2">
        <colgroup>
          <col class="col-md-2">
          <col class="col-md-8">
        </colgroup>
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <table class="text-right">
        <tr>
          <th><h5 class="mr-2">配送先</h5></th>
          <th><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary mr-5" %></th>
          <th><h5 class="mr-2">注文履歴</h5></th>
          <th><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>